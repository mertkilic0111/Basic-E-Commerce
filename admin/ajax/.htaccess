Options -Indexes

RewriteEngine on
RewriteCond %{SERVER_PORT} 80
RewriteRule ^.*$ https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]

RewriteRule ^x$ x.php [NC,L]

RewriteRule ^product.html$ product.php [NC,L]
RewriteRule ^orders.html$ orders.php [NC,L]
RewriteRule ^about.html$ about.php [NC,L]
RewriteRule ^settings.html$ settings.php [NC,L]